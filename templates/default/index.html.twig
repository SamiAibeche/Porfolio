{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <!-- Navigation -->
    <section>
        <h4>Navigation</h4>
    </section>
    <!-- Intro -->
    <section>
        <h4>Intro</h4>
    </section>
    <!-- Project Section-->
    <section>
        <h4>Cases</h4>
        {% for project in projects %}
            <div>
                <p><img style="width: 250px;" src="{{ asset('/uploads/projects/' ~ project.image) }}" alt="{{ project.name }}"></p>
                <p>{{ project.name }}</p>
                <p>{{ project.description }}</p>
                <p>For : {{ project.client }}</p>
                <p>Where : {{ project.company }}</p>
                <p>On : {{ project.createdAt | date("d/m/Y")  }}</p>
                <div>
                    Technos :
                    <p>
                    {% for techno in project.technos %}
                         <span style="color: {{ techno.color }}; background-color: {{ techno.background }}" > {{ techno.name }}</span>
                    {% endfor %}
                    </p>
                </div>
            </div>
        {% endfor %}
    </section>
    <!-- About Section-->
    <section>
        <h4>{{ about.title |raw }}</h4>
        {{ about.bio |raw }}
    </section>
    <!-- Contact / Footer Section-->
    <section>
        <h4>Contact</h4>
    </section>

