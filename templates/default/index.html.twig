{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <!-- Navigation -->
    <nav id="myNav" class="navbar navbar-dark bg-dark">
        <button id="burger" class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarsExample01" aria-controls="navbarsExample01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">
                <i class="fa fa-navicon"></i>
            </span>
        </button>

        <div class="navbar-collapse collapse" id="navbarsExample01" style="">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Intro <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Cases</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Contact</a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- Intro -->
    <section id="intro">
        <img class="img-fluid" src="{{ asset('/front/images/logo.png') }}" alt="Sami Aibeche">
    </section>
    <!-- About Section-->
    <section id="about">
        <div class="container">
            <div class="row">
            <div class="col-xs-12 col-md-6">
                <img class="img-thumbnail" src="{{ asset('/front/images/me.jpg') }}" alt="Sami Aibeche">
            </div>
            <div class="col-xs-12 col-md-6">
                <h4 class="about_title" >{{ about.title |raw }}</h4>
                <article class="about_desc">{{ about.bio |raw }}</article>
            </div>
            </div>
        </div>
    </section>
    <!-- Project Section-->
    <section id="cases" >
        <h4>Cases</h4>
        {% for project in projects %}
            <div>
                <p><img style="width: 250px;" src="{{ asset('/uploads/projects/' ~ project.image) }}" alt="{{ project.name }}"></p>
                <p>{{ project.name }}</p>
                <p>{{ project.description }}</p>
                <p>{{ project.link }}</p>
                <p>For : {{ project.client }}</p>
                <p>Where : {{ project.company }}</p>
                <p>On : {{ project.createdAt | date("d/m/Y")  }}</p>
                <div>
                    Technos :
                    <p>
                        {% for techno in project.technos %}
                            <span style="color: {{ techno.color }}; background-color: {{ techno.background }}" > {{ techno.name }}</span>
                        {% endfor %}
                    </p>
                </div>
            </div>
        {% endfor %}
    </section>
    <!-- Contact / Footer Section-->
    <section id="contact">
        <h4>Contact</h4>
    </section

{% endblock %}
