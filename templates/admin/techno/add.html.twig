{% extends 'admin/default/index.html.twig' %}

{% block main %}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
     <div class="row">
         <div class="col-md-9">
             <h1 class="display-4" >Welcome to your Technology Manager</h1>
             <p class="lead">
                 Here you will be able to add a new technology, please fill the fields below and submit the form
             </p>
         </div>
         <div class="col-md-9 mt_150">
             {{ form_start(form,  {'attr': {'class': 'techno_form', 'id' : 'addTechnoForm'} } ) }}
             <div class="form-group">
                 <label for="techno_name">Techno Name</label>
                 {{ form_widget(form.name, {'attr': {'class': 'form-control','placeholder':'Example : PHP'} })  }}
             </div>
             <div class="form-group">
                 <label for="techno_background">Techno Background Color</label>
                 {{ form_widget(form.background, {'attr': {'class': 'form-control','placeholder':'Example : #000000'} })  }}
             </div>
             <div class="form-group">
                 <label for="techno_color">Techno Color</label>
                 {{ form_widget(form.color, {'attr': {'class': 'form-control','placeholder':'Example : #FFFFFF'} })  }}
             </div>
             <div class="form-group">
                 {{ form_widget(form.save, {'attr' : {'class': 'login100-form-btn col-md-2 mt_100'}} )  }}
             </div>

             {{ form_end(form) }}
         </div>
     </div>
</main>
{% endblock %}
