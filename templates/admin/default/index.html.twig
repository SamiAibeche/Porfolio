{% extends 'admin/base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/admin"><span data-feather="home"></span>
            Dashboard <span class="sr-only">(current)</span></a>
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="/" target="_blank"><span data-feather="globe"></span>
            Website <span class="sr-only"></span></a>
        <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
                <a class="nav-link" href="/admin/logout"><span data-feather="log-out"></span>
                    Log out <span class="sr-only"></span></a>
            </li>
        </ul>
    </nav>
    {% set current_path = app.request.get('_route') %}
    <div class="container-fluid">
        <div class="row b_side_menu">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar side_menu">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link {% if(controller_name == 'AdminController') %} active {% endif %}" href="/admin">
                                <span data-feather="home"></span>
                                Dashboard <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if(controller_name == 'AboutController') %} active {% endif %}"  href="/admin/about">
                                <span data-feather="user"></span>
                                About me
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if(controller_name == 'TechnoController') %} active {% endif %}" href="/admin/techno">
                                <span data-feather="terminal"></span>
                                Technologies
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if(controller_name == 'ProjectController') %} active {% endif %}" href="/admin/project">
                                <span data-feather="briefcase"></span>
                                Cases
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
           {% block main %}
               <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
                   <h1 class="display-4" >Welcome to your Admin Manager</h1>
                   <p class="lead">
                       Here you will be able to manage all the content of your website, please click on a link below to edit his section
                   </p>
                   <div class="flex-container">
                       <div class="box-dashboard">
                           <div>
                               <span data-feather="user"></span>
                           </div>
                           <div>
                               <p>Here you can manage your about section, you will be able to edit the section</p>
                           </div>
                           <div class="container-login100-form-btn m-t-17">
                               <a href="/admin/about"><button class="login100-form-btn" type="submit">About me</button></a>

                           </div>
                       </div>
                       <div class="box-dashboard">
                           <div>
                               <span data-feather="terminal"></span>
                           </div>
                           <div>
                               <p>Here you can manage your technologies, you will be able to add, edit or remove a learned technology</p>
                           </div>
                           <div class="container-login100-form-btn m-t-17">
                               <a href="/admin/techno"><button class="login100-form-btn" type="submit">Technologies</button></a>

                           </div>
                       </div>
                       <div class="box-dashboard">
                           <div>
                               <span data-feather="briefcase"></span>
                           </div>
                           <div>
                               <p>Here you can manage your projects, you will be able to add, edit or remove a project</p>
                           </div>
                           <div class="container-login100-form-btn m-t-17">
                               <a href="/admin/project"><button class="login100-form-btn" type="submit">Cases</button></a>
                           </div>
                       </div>
                   </div>
               </main>
           {% endblock %}
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

    <!-- Icons -->
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <script>
        feather.replace()
    </script>
{% endblock %}
